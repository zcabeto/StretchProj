    nav#side-menu-1
      section#side-content
        .button_bar
          .dropdown 
            .dropdown-header(onclick='toggleDropdown(this)') Choose Attack
            .dropdown-content
              #[button(type="submit" onclick="swapGuide(1, 0);") SQL Injection]
